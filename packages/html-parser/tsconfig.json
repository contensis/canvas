{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "../out-canvas",
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": false,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "target": "es2020",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2019"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    }
}
